{% extends 'base.html.twig' %}

{% block title %}{{ product.title }} - Product Details{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row">
        <div class="col-md-6">
            {% if product.image %}
                <img src="{{ asset('uploads/images/'~ product.image) }}" class="img-fluid rounded" alt="{{ product.title }}">
            {% else %}
                <img src="https://via.placeholder.com/500" class="img-fluid rounded" alt="No Image Available">
            {% endif %}
        </div>
        <div class="col-md-6">
            <h1 class="display-4">{{ product.title }}</h1>
            <p class="text-muted">{{ product.category }}</p>
            <h3 class="text-success">Price: ${{ product.priceExclVat }}</h3>
            <p class="lead">{{ product.shortDescription }}</p>
            <a href="/" class="btn btn-primary mt-3">Back to Products</a>
        </div>
    </div>
</div>
{% endblock %}
