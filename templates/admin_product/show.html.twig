{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
  <div class="container">
    <h1 class="my-4">Product</h1>

    <div class="row">
        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ product.id }}</td>
                </tr>
                <tr>
                    <th>Title</th>
                    <td>{{ product.title }}</td>
                </tr>
                <tr>
                    <th>ShortDescription</th>
                    <td>{{ product.shortDescription }}</td>
                </tr>
                <tr>
                    <th>PriceExclVat</th>
                    <td>{{ product.priceExclVat }}</td>
                </tr>
                <tr>
                    <th>Category</th>
                    <td>{{ product.category }}</td>
                </tr>
                <tr>
                    <th>Image</th>
                    <td>
                        {% if product.image %}
                            <img src="{{ asset('uploads/images/'~ product.image) }}" alt="{{ product.title }}" class="img-fluid">
                        {% else %}
                            <p>No image available</p>
                        {% endif %}

                    </td>
                </tr>
                <tr>
                    <th>IsTop</th>
                    <td>{{ product.IsTop ? 'Yes' : 'No' }}</td>
                </tr>
                <tr>
                    <th>IsFeatured</th>
                    <td>{{ product.IsFeatured ? 'Yes' : 'No' }}</td>
                </tr>
                <tr>
                    <th>CreatedAt</th>
                    <td>{{ product.createdAt ? product.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
                <tr>
                    <th>UpdatedAt</th>
                    <td>{{ product.updatedAt ? product.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
            </tbody>
        </table>
    </div>
    <div class="row">
        <div class="col-md-3">
            <a href="{{ path('app_admin_product_index') }}" class="btn btn-primary"><i class="fa fa-rotate-left"></i> back to list</a>
        </div>
        <div class="col-md-3">
            <a href="{{ path('app_admin_product_edit', {'id': product.id}) }}"  class="btn btn-primary"><i class="fa fa-edit"></i> edit</a>
        </div>
        <div class="col-md-3">
            {{ include('admin_product/_delete_form.html.twig') }}
        </div>

    </div>

    
{% endblock %}
